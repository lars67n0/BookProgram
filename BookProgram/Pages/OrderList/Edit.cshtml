@page
@model BookProgram.Pages.OrderList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orders.ID" />
            <div class="form-group">
                <label asp-for="Orders.OrderName" class="control-label"></label>
                <input asp-for="Orders.OrderName" class="form-control" />
                <span asp-validation-for="Orders.OrderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.HoldID" class="control-label"></label>
                <select asp-for="Orders.HoldID" class="form-control" asp-items="ViewBag.HoldID"></select>
                <span asp-validation-for="Orders.HoldID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.BookListID" class="control-label"></label>
                <select asp-for="Orders.BookListID" class="form-control" asp-items="ViewBag.BookListID"></select>
                <span asp-validation-for="Orders.BookListID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model BookProgram.Pages.Koordinator.HoldYear.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Semesters In The System</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester[0].SemesterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester[0].Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester[0].EducationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Semester) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationName.EducationName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
